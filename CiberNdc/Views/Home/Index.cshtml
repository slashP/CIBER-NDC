@model IEnumerable<CiberNdc.Models.Photo>
@{
    ViewBag.Title = "CIBER @ NDC";
}


<div class="page-header" style="text-align: center; margin-bottom: 50px;">
    <h1>@ViewBag.Title</h1>
</div>
<div class="tiles well" style="text-align: center; margin: 10px auto">
    <div class="tilerow">
        <div class="tile one greenbg"><a href="#"></a><img src="~/Content/images/slow-and-steady-wins-the-race.jpg" alt=""/></div>
        <div class="tile one redbg"><a href="#"><span style="font-size: 1.4em;">Take picture</span></a></div>
    </div>

    <div class="tilerow">
        @foreach (var photo in Model)
        {
            var randomBackground = photo.RandomBackgroundColor();
            <div class="tile one @randomBackground"><a href="#"></a><img src="/Home/GetImage/@photo.Id" alt=""/></div>
        }
    </div>
</div>

<script src="~/Scripts/metro/jquery.metro.js"></script>