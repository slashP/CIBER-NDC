@model IEnumerable<CiberNdc.Models.Photo>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Employees", "Index", "Employees") | 
    @Html.ActionLink("All photos", "Index", "Photo")
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Filename)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Format)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Employee.Name)
        </th>
        <th>Bilde</th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Filename)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Format)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Employee.Name)
        </td>
        <td>
            <img src="/Home/GetImage/@item.Id" alt="Bilde av person" width="50px;"/>
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) | 
            @Html.ActionLink("Details", "Details", new { id = item.Id }) | 
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }) | 
            @Html.ActionLink("Train", "Train", "Recognition", new { employeeId = item.EmployeeId, photoId = item.Id }, null) | 
            @Html.ActionLink("Recognize", "Recognize", "Recognition", new { photoId = item.Id }, null)
        </td>
    </tr>
}

</table>
